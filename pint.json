{
    "preset": "psr12",
    "rules": {
        "array_syntax": {
            "syntax": "short"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true,
        "phpdoc_align": {
            "align": "left"
        }
    },
    "exclude": [
        "storage",
        "vendor"
    ]
}
